<% include header %>

    <body>
        <% include navbar %>
            <div role="main" class="container" style="width: 70%; margin: auto; height: 800px; margin-top: 100px;">
                <h2>
                    Employee Listing
                </h2>
                <br />
                <a href="/new">Add New</a>
                <table class="table table‐hover">
                    <thead class="thead‐dark">
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>View Records With Same Last Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%employees.forEach(function(entry){%>
                            <tr>
                                <td>
                                    <%=entry.firstName%>
                                </td>
                                <td>
                                    <%=entry.lastName%>
                                </td>
                                <td><a href="/view/<%= entry.lastName %>">Search</a></td>
                            </tr>
                    </tbody>
                    <%})%>
                </table>

            </div>
            <% include scripts %>
                <% include footer %>
    </body>
